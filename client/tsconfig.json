{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": ["vite/client"],
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": ["./src/*"],
      "@finger-fight/shared/*": ["../shared/src/*"],
      "@finger-fight/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue", "env.d.ts"],
  "references": [
    { "path": "../shared" }
  ]
}
